@{
    ViewData["Title"] = "Login";
}

@model ExpenseWebAppBLL.DTOs.UserDTOs.UserLogin

<div class="text-center">
    <h1 class="display-4">Login</h1>
</div>

<script src="~/js/HomeFrontend.js"></script>

<!-- Check for id to route the data!!! -->
<form asp-controller="Home">
    <label class="mt-4">Username</label>
    <input class="form-control" type="text" id="LoginUsername" name="Username" placeholder="Enter name" value="@Model?.Username" />

    <label class="mt-4">Password</label>
    <input class="form-control" type="text" id="LoginPassword" name="Password" placeholder="Enter password" value="@Model?.Password" />

    <button class="btn btn-primary mt-4" type="button" onclick="Login()">Login</button>
</form>