@{
    ViewData["Title"] = "Reset password";
}

@model ExpenseWebAppBLL.DTOs.UserDTOs.UserLogin

<script src="~/js/UsersFrontend.js"></script>

<div class="d-flex align-items-center justify-content-center" style="height: 80vh;">
    <div style="width: 400px;">
        <h1 class="mb-4 text-start" style="font-weight: bold; color: #333;">Reset password</h1>
        <form asp-controller="Home">
            <div class="mb-3 text-start">
                <label class="form-label">Email</label>
                <input class="form-control" type="text" id="UserEmail" name="Username" placeholder="Enter your email" value="@Model?.Username" />
            </div>

            <button class="btn btn-outline-primary w-100" type="button" onclick="submitPasswordReset()">Send new password</button>
        </form>
    </div>
</div>